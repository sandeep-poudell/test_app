<% @articles.each do |article| %>
  <div class="container", style="margin-top: 30px">
    <div class="card">
      <div class="card-header">
        <%= article.title %>
      </div>
      <div class="card-body">
        <h5 class="card-title"> <%= article.description %> </h5>
        <p class="card-text"> <i>By: <%= article.user.username %></i>  </p>
<!--        <a href="#" class="btn btn-primary">See more</a>-->
        <%= link_to "Show", article_path(article), method: :show, class: "btn btn-primary" %>
        <%= link_to "Edit", edit_article_path(article), method: :edit, class: "btn btn-secondary" %>
        <%= link_to "Delete", article_path(article), method: :show, class: "btn btn-outline-danger" %>
      </div>
    </div>
  </div>
<% end %>
