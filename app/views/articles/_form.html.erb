<%= render 'shared/errors', obj: @article%>

<%=  form_with(model: @article, local: true) do |f| %>

  <div class="container">
    <div class=" card" style="margin-top: 30px">
      <h5 class="card-header"> Create a new Article</h5>
      <div class="card-body">
        <form>
          <div class="form-group">
            <p>
              <%= f.label :title %>
              <%= f.text_field :title, class:"form-control", placeholder: "Enter title" %>
            </p>

            <p>
              <%= f.label :description %>
              <%= f.text_area :description, class:"form-control", placeholder: "Enter description" %>
            </p>

            <p>
              <%= f.submit "Submit Article", class: "btn btn-primary" %> <%= link_to "Cancel", articles_path, class: "btn btn-outline-danger" %>
            </p>
          </div>
        </form>
      </div>
    </div>
  </div>

<% end %>




