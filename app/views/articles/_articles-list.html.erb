<% @articles.each do |article| %>
  <div class="container", style="margin-top: 30px">
    <div class="card">
      <div class="card-header">
        <%= article.title %>
      </div>
      <div class="card-body">
        <h5 class="card-title"> <%= article.description %> </h5>
        <p class="card-text"> <i>By: <%= article.user.username %></i>  </p>
        <!--        <a href="#" class="btn btn-primary">See more</a>-->
        <%= link_to "Show", article_path(article), method: :show, class: "btn btn-primary" %>
        <% if logged_in? && article.user == current_user %>
          <%= link_to "Edit", edit_article_path(article), method: :edit, class: "btn btn-secondary" %>
          <%= link_to "Delete", article_path(article), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>