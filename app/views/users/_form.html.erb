<% if @user.errors.any? %>
  <h2> User could not be created because of following errors </h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>


<%=  form_with(model: @user, local: true) do |f| %>

  <p>
    <%= f.label :username %> <br/>
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label :email %> <br/>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :password %> <br/>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.submit "Sign Up" %>
  </p>

<% end %>
